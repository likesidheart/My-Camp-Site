<% include partials/header %>

<div class="container">
    <div class="row">
            <h1 style="text-align: center;">Create a new Camp Sight</h1>
            <div style="width: 30%; margin: 25px auto;">
                 <!-- Form -->
                <form action="/campgrounds" method="POST">
                    <div class="form-group">
                            <input class="form-control" type="text" name="name" placeholder="Camp Name">
                    </div>
                    <div class="form-group">
                            <input class="form-control" type="text" name="image" placeholder="image URL">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="description" placeholder="description">
                </div>
                    <div class="form-group">
                            <button class="btn btn-lg btn-default btn-block btn-primary">Submit!</button>
                    </div>
                </form>
                <a href="/campgrounds">Back to Camp sights</a>
            </div>                   
    </div>   
</div>
<% include partials/footer %>